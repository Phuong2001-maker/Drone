@model TabLanguageModel
@{ }
<div @Model.TagFroup>
    <input grid-input type="hidden" name="language" value="@(Model.Language== null ?"vi":Model.Language)" />
    <ul  class="nav nav-tabs nav-tabs-t tab-lang" role="tablist">
        @foreach (var item in PT.Shared.ListData.ListLanguage)
        {
            <li role="presentation" class="@(Model.Language == null ? (item.Id=="vi"?"active":"") : (item.Id==Model.Language?"active":""))">
                <a data-val="@item.Id" onclick="@Model.FuntionName" href="@(Model.LinkDefault)_@item.Id" data-toggle="tab">
                    <img class="icon-lang" src="@item.Icon" />  @item.Name
                </a>
            </li>
        }
    </ul>
</div>
