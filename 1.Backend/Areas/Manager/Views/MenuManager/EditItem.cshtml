@model PT.Domain.Model.MenuItemModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}
<div class="divStaticForm formatFromcate">
    <form form-edit-static asp-action="EditItem">
        @Html.AntiForgeryToken()
        <input asp-for="MenuId" type="hidden" />
        <div class="sumaryValidateForm" asp-validation-summary="All"></div>
        <h3 class="titleStaticForm">Cập nhật Menu item</h3>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="form-label" asp-for="Name"></label> <strong class="text-danger">*</strong> <span asp-validation-for="Name"></span>
                    <div class="controls">
                        <input type="text" class="form-control input-sm form-control-t" asp-for="Name">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-9">
                        <div class="form-group">
                            <label class="form-label" asp-for="Href"></label> <strong class="text-danger">*</strong> <span asp-validation-for="Href"></span>
                            <div class="controls">
                                <input type="text" class="form-control input-sm form-control-t" asp-for="Href">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="form-label" asp-for="Target"></label>  <span asp-validation-for="Target"></span>
                            <select data-action="@Url.Action("SearchService")" asp-for="Target" class="input-sm form-control-t show-tick">
                                <option value="_blank">_blank</option>
                                <option value="_parent">_parent</option>
                                <option value="_self">_self</option>
                                <option value="_top">_top</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label" asp-for="Class"></label> <span asp-validation-for="Class"></span>
                            <div class="controls">
                                <input type="text" class="form-control input-sm form-control-t" asp-for="Class">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label" asp-for="Icon"></label> <span asp-validation-for="Icon"></span>
                            <div class="input-group input-group-t">
                                <input id="Banner" type="text" class="form-control input-sm form-control-t" asp-for="Icon">
                                <div class="input-group-addon btn-group-addon btn-group-addon-form-group">
                                    <a button-open-file-manager data-img="imgBanner" data-target="Banner" class="btn btn-icon btn-danger waves-effect"><i class="material-icons">attach_file</i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <input type="checkbox" id="Status2" asp-for="Status" class="filled-in chk-col-green" />
                    <label for="Status2" asp-for="Status"></label>
                </div>
            </div>
        </div>
        <div class="divbtnform">
            <button button-delete data-id="@Model.MenuId" data-type="createItem" data-action="@Url.Action("DeleteItem",new { id=Model.Id})" data-retur-nurl="@PT.Shared.Functions.FormatReturnUrl(Context.Request.Query["returnurl"], Url.Action("Index"))" data-loading-text="<i class='material-icons icon-spin'>autorenew</i> <span>Xóa</span>" type="button" class="btn btn-icon  btn-p-t  btn-danger waves-effect"><i class="material-icons">delete_forever</i> <span>Xóa</span></button>
            <a data-id="@Model.MenuId" data-form="[form-edit-static]" button-submit data-type="createItem" data-loading-text="<i class='material-icons icon-spin'>autorenew</i> <span>Lưu thay đổi</span>" class="btn btn-icon bg-indigo waves-effect"><i class="material-icons">save</i> <span>Lưu thay đổi</span></a>
        </div>
    </form>
</div>