@inject Microsoft.Extensions.Options.IOptions<List<AdvertisingHomepageSettings>> _advertisingHomepageSettings;
@{
    string language = PT.Base.CultureHelper.GetCurrentCulture.Id;
    var dl = _advertisingHomepageSettings.Value.FirstOrDefault(x => x.Status && x.Id == language && x.StartDate.Date <= DateTime.Now.Date && x.EndDate.Date >= DateTime.Now.Date);
    string controller = this.ViewContext.RouteData.Values["controller"].ToString();
    string action = this.ViewContext.RouteData.Values["action"].ToString();
}

@if (dl != null && dl.Status && controller=="Home" && action=="Index")
{
    <style>
        .canImgBanner {
            transform: translate(-50%, -50%) scale(1);
            display: block;
            left: 50% !important;
            top: 50% !important;
            position: fixed;
            z-index: 99999999;
            text-align: center;
        }

        .timeoutborder {
            position: absolute;
            width: 30px;
            height: 30px;
            top: 4px;
            left: 4px;
            display: inline-block !important;
            border: 2px solid #fff !important;
            padding: 3px 5px !important;
            border-radius: 100px !important;
            opacity: 1 !important;
        }

        #timeticBX {
            color: #fff;
            font-size: 14px;
        }

        @@media (max-width: 1023px) {
        }

        @@media (max-width: 767px) {
        }

        @@media (max-width: 376px) {
        }

        .canImgBanner, .canImgBanner * {
            font-size: 26px;
        }

        button.close-popup-home {
            display: inline-block !important;
            border: 1px solid #ccc !important;
            padding: 5px 5px !important;
            border-radius: 100px !important;
            background-color: #fff !important;
            position: absolute !important;
            top: -13px !important;
            right: -12px !important;
            opacity: 1 !important;
            /* font-size: 30px !important; */
            line-height: 11px;
        }

            button.close-popup-home span {
                font-size: 23px !important;
                position: relative;
                top: 0px;
            }

        button.close-popup-home {
            -webkit-appearance: none;
            padding: 0;
            cursor: pointer;
            background: transparent;
            border: 0;
        }

        .canImgBanner .banner-head-1 {
            position: absolute;
            top: 20px;
            left: 20px;
            font-size: 26px;
            color: #9e0039;
            font-family: Roboto, sans-serif !important;
            font-weight: 500;
            display: inline-block !important;
            font-weight: bold;
        }

        .canImgBanner .banner-head-2 {
            position: absolute;
            left: 20px;
            top: 60px;
            font-size: 24px;
            color: #9e0039;
            font-weight: bold;
            font-family: Roboto, sans-serif !important;
            display: inline-block !important;
        }

        .canImgBanner .banner-content-text {
            position: absolute;
            right: 20px;
            top: 100px;
            font-size: 24px;
            color: #9e0039;
            width: 50%;
            text-align: justify;
            line-height: 32px;
            font-family: Roboto, sans-serif !important;
            display: inline-block !important;
        }

        .canImgBanner .banner-phone {
            position: absolute;
            right: 20px;
            bottom: 31px;
            color: #fff;
            font-family: Roboto, sans-serif !important;
            background: #ec6464;
            padding: 9px 10px;
            font-weight: 500;
            font-size: 19px;
            display: inline-block !important;
        }

        .canImgBanner .can-popup {
            position: relative;
            display: inline-block;
            border: 1px solid #ddd;
        }

        .background-banner-homepage {
            position: fixed;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;
            background: rgba(0, 0, 0, 0.48);
            z-index: 9999999;
        }

            .background-banner-homepage img {
                transform: translate(-50%, -50%) scale(0.5);
                display: block;
                left: 50% !important;
                top: 50% !important;
                position: fixed;
                z-index: 99999999;
                text-align: center;
            }
    </style>
    <div id="parent-homepage" style="display:none;"></div>
    <div class="background-banner-homepage" style="display:none;">
        <img src="~/Content/Admin/images/Spinner-1s-200px.gif" />
    </div>

    <script>
        $(window).resize(function () {
            getBaner();
        });
        var thisTime = 1;
        getBaner();
        function getBaner()
        {
            if (checkTimeBannerHome()) {
                $(".background-banner-homepage").show();
                var isvertical = false;
                var widthWindow = $(window).width();
                var heightWindow = $(window).height();
                if (widthWindow < heightWindow) {
                    isvertical = true;
                }

                $.get("@Url.Action("BannerHomePage", "Home", new { language })" + "&isvertical=" + isvertical, function (data) {
                    updateTimeBannerHome();
                    $("#parent-homepage").html(data);
                    $("#parent-homepage").fadeIn(600);
                    setInterval(function () {
                        thisTime++;
                        if (thisTime >= @dl.DisplayTime) {
                            $(".background-banner-homepage").hide();
                            $("#parent-homepage").fadeOut(600);
                        }
                    }, 1000);
                });
            }
        }

        function updateTimeBannerHome() {
            var option=(1 / 86400) * (60 * 60 * @dl.TimeOut);
            $.cookie('banner-home-page-@dl.UpdatedDate?.ToString("yyyy-MM-dd_HH_mm_ss")', 1, {
                expires: option
            }
         );
        }
        function checkTimeBannerHome() {
            if ($.cookie('banner-home-page-@dl.UpdatedDate?.ToString("yyyy-MM-dd_HH_mm_ss")') == undefined || $.cookie('banner-home-page-@dl.UpdatedDate?.ToString("yyyy-MM-dd_HH_mm_ss")') == null) {
                return true;
            }
            else {
                return false;
            }
        }
    </script>
}